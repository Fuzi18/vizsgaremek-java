<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="1242.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.vizsgaremekjava.ShopController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
    <children>
        <TableView fx:id="shopTable" prefHeight="560.0" prefWidth="700.0" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="typeCol" minWidth="50.0" prefWidth="105.0" text="type" />
                <TableColumn fx:id="teamCol" prefWidth="205.0" text="team" />
                <TableColumn fx:id="sizeCol" minWidth="47.0" prefWidth="102.0" text="size" />
                <TableColumn fx:id="colorCol" prefWidth="161.0" text="color" />
                <TableColumn fx:id="priceCol" prefWidth="172.0" text="price" />
                <TableColumn fx:id="quantityCol" prefWidth="96.0" text="quantity" />
            </columns>
        </TableView>
        <GridPane prefHeight="538.0" prefWidth="413.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="82.0" minHeight="10.0" prefHeight="71.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="101.0" minHeight="10.0" prefHeight="77.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="126.0" minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="141.0" minHeight="10.0" prefHeight="69.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="149.0" minHeight="10.0" prefHeight="66.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="97.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="65.0" minHeight="10.0" prefHeight="43.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateClick" text="Update" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteClick" text="Delete" />
                    </children>
                </HBox>
                <HBox spacing="20.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
                    <children>
                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitClick" text="Submit" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelClick" text="Cancel" />
                    </children>
                </HBox>
                <TextField fx:id="typeInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="teamInput" layoutX="10.0" layoutY="18.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="sizeInput" layoutX="10.0" layoutY="18.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="colorInput" layoutX="10.0" layoutY="18.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Spinner fx:id="priceInput" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Spinner fx:id="quantityInput" layoutX="10.0" layoutY="18.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Label text="Type:" GridPane.rowIndex="1" />
                <Label layoutX="10.0" layoutY="22.0" text="Team:" GridPane.rowIndex="2" />
                <Label layoutX="10.0" layoutY="22.0" text="Size:" GridPane.rowIndex="3" />
                <Label layoutX="10.0" layoutY="22.0" text="Color:" GridPane.rowIndex="4" />
                <Label layoutX="10.0" layoutY="22.0" text="Price:" GridPane.rowIndex="5" />
                <Label layoutX="10.0" layoutY="22.0" text="Quantity:" GridPane.rowIndex="6" />
            </children>
        </GridPane>
    </children>
    </HBox>
    </children>

<padding>
<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>
        </VBox>
